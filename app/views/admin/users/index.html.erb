<div class="container">
  <div class="row m-3">
    <div class="col offset-md-2">
      <h4>会員一覧</h4>
    </div>
  </div>

  <table class="table">
    <thead class="table-dark">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
      </tr>
    </thead>
    <tbody>
      <% @user.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to admin_user_path(user.id) do %>
          <%= user.name %>
          <% end %>
        </td>
        <td><%= user.email %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row">
    <div class="mx-auto">
      <%#= paginate @customer%>
    </div>
  </div>
</div>
