<div class="container">

<div class="row">
  <div class="col-md-3">
    <h4>ユーザー情報</h4>
    <div>
      <%#= image_tag user.get_profile_image(100,100) %>
      <table class="table">
        <tr></tr>
        <tbody></tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>profile</th>
            <th><%= @user.profile %></th>
          </tr>
        </tbody>
      </table>
      <%= link_to edit_admin_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
      <i class="fa-solid ffas fa-user-cog"></i>
      <% end %>
    </div>
  </div>

  <div class="col-md-8 offset-md-1">
    <h4>レシピ一覧</h4>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>title</th>
          <th>introduction</th>
        </tr>
        <% @recipes.each do |recipe| %>
        <tr>
          <td><%= image_tag recipe.get_recipe_image(100,100) %></td>
          <td><%= link_to recipe.recipe_name, admin_recipe_path(recipe.id) %></td>
          <td><%= recipe.introduction %></td>
        </tr>
        <% end %>
      </thead>
    </table>
  </div>

  <div class="row">
   <div class="col-md-8 offset-md-1">
    <h4>コメント一覧</h4>
        <div>
          <p>コメント件数：<%= @user.post_comments.count %></p>
          <% @user.post_comments.each do |post_comment| %>
            <%= post_comment.user.name %>
            <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
            <%= link_to "削除", admin_post_comment_path(post_comment), method: :delete %><br>
          <% end %>
        </div>
    </div>
  </div>
</div>