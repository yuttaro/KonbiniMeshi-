<div class"container">

  <div class="row m-3">
    <div class="col offset-md-2">
      <h4>新規会員登録</h4>
    </div>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

    <table class="table table-borderless">
      <tr>
        <th>名前</th>
        <td><%= f.text_field :name %></td>
      <tr>
      <tr>
        <th><%= f.label :email,'メールアドレス' %></th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <th><%= f.label :password,'パスワード(６文字以上)' %><% if @minimum_password_length %>
            <% end %>
        </th>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <th><%= f.label :password_confirmation,'パスワード（確認用）' %></th>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
    </table>

    <div class="actions offset-md-3">
      <%= f.submit "新規会員登録", class:"btn btn-sm btn-success" %>
    </div>
<% end %>

  <div class="row m-3">
    <div class="col offset-md-2">
      <h4>既に登録済みの方は</h4><br>
      <p><%= link_to  "こちら",new_user_session_path %>からログインしてください</p>
    </div>
  </div>
</div>
