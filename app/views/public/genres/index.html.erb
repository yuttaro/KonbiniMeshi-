<div class="row m-3">
  <div class="col offset-md-2">
    <h4>ジャンル一覧</h4>
  </div>
</div>
  <table class="table table-hover">
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= link_to genre.name, genre_path(id: genre.id) %></td>
          <td><%= genre.recipes.count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>